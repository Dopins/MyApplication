<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/green"
    tools:context="com.example.dopin.myapplication.LoginActivity"
    style="@style/AppTheme">
    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="注册"
        android:textSize="50px"
        android:textColor="@color/white"
        android:background="@color/green"
        android:id="@+id/signUp"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="55px"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />
        <LinearLayout
            android:id="@+id/login_form"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/account"
            android:hint="输入邮箱/用户名"
            android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@color/green"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="______________________________________"
                android:gravity="center_vertical|left"
                android:textColor="@color/white"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal" />

            <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
                android:textColor="@color/white"
                android:textCursorDrawable="@drawable/color_cursor"
                android:hint="输入密码"
            android:background="@color/green"
            android:textColorHint="@color/white"
            android:id="@+id/password"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="______________________________________"
                android:gravity="center_vertical|left"
                android:textColor="@color/white"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="忘记密码？"
                android:textSize="40px"
                android:textColor="@color/white"
                android:background="@color/green"
                android:textStyle="italic"
                android:id="@+id/forgetPassword"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal" />

            <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="登录"
            android:textSize="60px"
            style="?android:textAppearanceSmall"
            android:textColor="@color/green"
            android:background="@color/white"
            android:id="@+id/login"

            android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:text="第三方账号登录"
                android:textSize="50px"
                android:textColor="@color/white"
                android:id="@+id/textView4"
                android:gravity="center_horizontal|bottom"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:id="@+id/login_form2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:id="@+id/textView8" />

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sina"
                    android:background="@color/green"
                    android:scaleType="fitXY"
                    android:id="@+id/sinaLogin" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:id="@+id/textView7" />

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/qq"
                    android:background="@color/green"
                    android:scaleType="fitXY"
                    android:id="@+id/qqLogin" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>