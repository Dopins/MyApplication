<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/night_title"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dopin.androidpractice2.SettingActivity">
    <LinearLayout
        android:id="@+id/clean_cache"
        android:background="@color/night_item_back"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="清理缓存"
            android:textColor="@color/night_item_font"
            android:paddingLeft="10dp"
            android:clickable="false"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:clickable="false"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/cache_size"
            android:textColor="@color/night_item_font"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:text="0MB"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textColor="@color/blue"
        android:text="自动清理缓存"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@color/night_item_back"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="关闭应用时清理"
            android:textColor="@color/night_item_font"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Switch
            android:id="@+id/swi_clean_cache"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/night_item_back"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="大于50M时清理"
            android:textColor="@color/night_item_font"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Switch
            android:id="@+id/swi_clean_cache2"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:textColor="@color/blue"
        android:text="自动切换主题"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@color/night_item_back"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/theme_text"
            android:text="开关"
            android:textColor="@color/night_item_font"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Switch
            android:id="@+id/swi_theme"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/day_time"
        android:paddingLeft="10dp"
        android:background="@color/night_item_back"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="60dp">
        <TextView
            android:text="日间模式开启时间"
            android:textColor="@color/night_item_font"
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/day_time_view"
            android:textColor="@color/night_item_font"
            android:clickable="false"
            android:text="6:00"
            android:textSize="13sp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/night_time"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:background="@color/night_item_back"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:clickable="false"
            android:text="夜间模式开启时间"
            android:textColor="@color/night_item_font"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/night_time_view"
            android:clickable="false"
            android:text="18:00"
            android:textColor="@color/night_item_font"
            android:textSize="13sp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
